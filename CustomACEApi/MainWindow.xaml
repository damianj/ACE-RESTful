<Window x:Class="CustomACEAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomACEAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700">
    <Grid Background="#FF042E3A">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*" />
            <RowDefinition Height="290*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button Content="START" Margin="2,11,3,1" FontSize="24" FontWeight="Bold" Background="#FF042E3A" Foreground="White" BorderBrush="White" Click="Start_APP" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1"/>
        <RichTextBox x:Name="OutputText" Margin="1,3,1,1" FontFamily="Consolas" FontWeight="Bold" Background="#19FFFFFF" Foreground="White" SelectionBrush="#FF85BDCD" TextChanged="RichTextBox_TextChanged" IsEnabled="False" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="STOP" Margin="2,11,1,1" FontWeight="Bold" FontSize="24" Background="#FF042E3A" Foreground="White" BorderBrush="White" Click="Stop_APP" Grid.Column="2" VerticalContentAlignment="Center"/>
        <StatusBar Margin="11,6,1,0" Background="#FF042E3A" BorderBrush="White" Foreground="White" Grid.Row="2" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Grid HorizontalAlignment="Left" Height="369" Margin="11,0,0,0" VerticalAlignment="Top" Width="672" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

    </Grid>
</Window>
