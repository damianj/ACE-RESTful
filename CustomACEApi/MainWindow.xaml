<Window x:Class="CustomACEAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomACEAPI"
        mc:Ignorable="d"
        Title="Adept ACE API Server" Height="400" Width="700">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*" />
            <RowDefinition Height="290*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button Content="START" Margin="2,11,3,1" FontSize="24" FontWeight="Bold" Background="#FF007ACC" Foreground="White" BorderBrush="#FF414144" Click="Start_APP" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1"/>
        <Button Content="STOP" Margin="2,11,1,1" FontWeight="Bold" FontSize="24" Background="#FF007ACC" Foreground="White" BorderBrush="#FF414144" Click="Stop_APP" Grid.Column="2" VerticalContentAlignment="Center"/>
        <StatusBar Margin="2,6,1,0" Background="#FF007ACC" BorderBrush="#FF414144" Foreground="White" Grid.Row="2" Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <Grid HorizontalAlignment="Left" Height="369" Margin="11,0,0,0" VerticalAlignment="Top" Width="672" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <TextBox x:Name="OutputText" Margin="2,10,1,0" TextWrapping="Wrap" Text="" BorderBrush="#FF414144" Foreground="#FF007ACC" FontFamily="Consolas" FontWeight="Bold" SelectionBrush="#FF9DAFB4" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
    </Grid>
</Window>
