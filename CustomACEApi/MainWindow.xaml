<Window x:Class="CustomACEAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomACEAPI"
        mc:Ignorable="d"
        Title="Adept ACE API Server" Height="400" Width="700" MinHeight="200" MinWidth="350">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.24" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="148*"/>
            <RowDefinition Height="21"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="69"/>
            <ColumnDefinition Width="69"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Button Content="START" FontWeight="Bold" Background="#FF1E9628" Foreground="White" BorderBrush="#FF414144" Click="Start_APP" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" FontSize="22" Grid.Row="1" FontFamily="Calibri"/>
        <Button Content="STOP" FontWeight="Bold" FontSize="22" Background="#FFC81428" Foreground="White" BorderBrush="#FF414144" Click="Stop_APP" Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" FontFamily="Calibri" IsCancel="True" HorizontalContentAlignment="Center"/>
        <StatusBar Margin="2,0,0,0" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" BorderBrush="#FF414144" Foreground="White" Grid.Row="7" Grid.ColumnSpan="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="OutputText" Margin="0,5" TextWrapping="Wrap" Text="" BorderBrush="#FF414144" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas" FontWeight="Bold" SelectionBrush="#FF9DAFB4" Grid.ColumnSpan="4" Grid.Row="3" Grid.Column="1" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnlyCaretVisible="True" Grid.RowSpan="4"/>
        <ComboBox x:Name="ControllerPathComboBox" Grid.Column="3" SelectedValuePath="Content" VerticalContentAlignment="Center" Margin="5,0,0,4" FontSize="11" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="1" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas"/>
        <ComboBox x:Name="RobotPathComboBox" Grid.Column="3" SelectedValuePath="Content" VerticalContentAlignment="Center" Grid.Row="2" FontSize="11" FontWeight="Bold" Margin="5,0,0,0" Grid.ColumnSpan="2" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas"/>
        <Button Content="LOAD" Background="#FF0066CC" Foreground="White" BorderBrush="#FF414144" Grid.Column="2" FontSize="22" FontWeight="Bold" Click="Load_ControllerAndRobot" Grid.Row="1" FontFamily="Calibri"/>
    </Grid>
</Window>
