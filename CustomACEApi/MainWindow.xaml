<Window x:Class="CustomACEAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomACEAPI"
        mc:Ignorable="d"
        Title="Adept ACE API Server" Height="400" Width="700">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="44*" />
            <RowDefinition Height="38*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*" />
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="354*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Button Content="START" Margin="2,2,3,0" FontWeight="Bold" Background="#FF007ACC" Foreground="White" BorderBrush="#FF414144" Click="Start_APP" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" FontSize="14" Grid.RowSpan="2"/>
        <Button Content="STOP" Margin="2,2,3,0" FontWeight="Bold" FontSize="14" Background="#FF007ACC" Foreground="White" BorderBrush="#FF414144" Click="Stop_APP" Grid.Column="2" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
        <StatusBar Margin="2,0,0,0" Background="#FF007ACC" BorderBrush="#FF414144" Foreground="White" Grid.Row="6" Grid.ColumnSpan="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="OutputText" Margin="2,5,0,5" TextWrapping="Wrap" Text="" BorderBrush="#FF414144" Foreground="#FF007ACC" FontFamily="Consolas" FontWeight="Bold" SelectionBrush="#FF9DAFB4" Grid.ColumnSpan="4" Grid.Row="2" Grid.Column="1" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnlyCaretVisible="True" Grid.RowSpan="4"/>
        <ComboBox x:Name="ControllerPathComboBox" Grid.Column="4" SelectedValuePath="Content" VerticalContentAlignment="Center" Margin="0,2" FontSize="11" FontWeight="Bold"/>
        <ComboBox x:Name="RobotPathComboBox" Grid.Column="4" SelectedValuePath="Content" VerticalContentAlignment="Center" Grid.Row="1" FontSize="11" FontWeight="Bold"/>
        <Button Content="Load" Background="#FF007ACC" Foreground="White" BorderBrush="#FF414144" Grid.RowSpan="2" Margin="2,2,3,0" Grid.Column="3" FontSize="14" FontWeight="Bold" Click="Load_ControllerAndRobot"/>
    </Grid>
</Window>
