<Window x:Class="CustomACEAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomACEAPI"
        mc:Ignorable="d"
        Title="Adept ACE API Server" Height="400" Width="700" MinHeight="200" MinWidth="350">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.24" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="148*"/>
            <RowDefinition Height="21"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="69"/>
            <ColumnDefinition Width="69"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Button Content="START" FontWeight="Bold" Foreground="White" Click="Start_APP" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" FontSize="22" Grid.Row="1" FontFamily="Calibri" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\greenBG.png"/>
            </Button.Background>
        </Button>
        <Button Content="STOP" FontWeight="Bold" FontSize="22" Foreground="White" Click="Stop_APP" Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" FontFamily="Calibri" IsCancel="True" HorizontalContentAlignment="Center" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\redBG.png"/>
            </Button.Background>
        </Button>
        <StatusBar x:Name="SystemStatusBar" Foreground="White" Grid.Row="7" Grid.ColumnSpan="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1">
            <TextBlock Name="SystemStatusBarText" VerticalAlignment="Center" FontFamily="Consolas" FontWeight="Bold" FontSize="11" />
            <StatusBar.BorderBrush>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\blueBG.png"/>
            </StatusBar.BorderBrush>
            <StatusBar.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\blueBG.png"/>
            </StatusBar.Background>
        </StatusBar>
        <TextBox x:Name="OutputText" Margin="0,5" TextWrapping="Wrap" Text="" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas" FontWeight="Bold" SelectionBrush="#FF9DAFB4" Grid.ColumnSpan="4" Grid.Row="3" Grid.Column="1" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnlyCaretVisible="True" Grid.RowSpan="4">
            <TextBox.BorderBrush>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </TextBox.Background>
        </TextBox>
        <ComboBox x:Name="ControllerPathComboBox" Grid.Column="3" SelectedValuePath="Content" VerticalContentAlignment="Center" Margin="5,0,0,4" FontSize="11" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="1" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas">
            <ComboBox.BorderBrush>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </ComboBox.BorderBrush>
            <ComboBox.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </ComboBox.Background>
        </ComboBox>
        <ComboBox x:Name="RobotPathComboBox" Grid.Column="3" SelectedValuePath="Content" VerticalContentAlignment="Center" Grid.Row="2" FontSize="11" FontWeight="Bold" Grid.ColumnSpan="2" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontFamily="Consolas" Margin="5,0,0,0">
            <ComboBox.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </ComboBox.Background>
            <ComboBox.BorderBrush>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\whiteBG.png"/>
            </ComboBox.BorderBrush>
        </ComboBox>
        <Button Content="LOAD" Foreground="White" Grid.Column="2" FontSize="22" FontWeight="Bold" Click="Load_ControllerAndRobot" Grid.Row="1" FontFamily="Calibri" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="C:\Users\Damian\Dropbox\GitHub\MARSLab_ACEAPI\CustomACEAPI\blueBG.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
